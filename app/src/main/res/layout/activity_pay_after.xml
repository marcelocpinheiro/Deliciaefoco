<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.deliciaefoco.deliciaefoco.Activities.PayAfterActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprar como convidado" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="end|bottom"
                android:layout_marginRight="15dp"
                android:text="Voltar" />

        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/txtSearchEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar nome ou e-mail"
        android:text=""
        android:textSize="40px"
        android:background="#EEE"
        android:padding="20px"/>

    <GridView
        android:id="@+id/gridViewClients"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="auto_fit"
        android:padding="20dp"
        android:columnWidth="400dp"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:background="#FFF"/>
</LinearLayout>
