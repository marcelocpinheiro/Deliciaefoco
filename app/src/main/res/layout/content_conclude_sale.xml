<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.deliciaefoco.deliciaefoco.Activities.ConcludeSale"
    tools:showIn="@layout/activity_conclude_sale"
    android:gravity="center">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obrigado por comprar com a Delícia e Foco, "
        android:textAlignment="center"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/txtNameEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Não é você? Clique no botão cancelar para selecionar a conta correta."
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/txtValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text='Para continuar, digite sua senha e toque em "Finalizar Compra"'
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="160dp"/>

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="220dp"
        android:inputType="textPassword"
        android:hint="Digite aqui sua senha"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="260dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btnFinalizarCompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalizar Compra"

            />


        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar" />

    </LinearLayout>



</RelativeLayout>
